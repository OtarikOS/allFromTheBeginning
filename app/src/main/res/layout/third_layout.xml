<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="12dp"
        android:text="Game Settings"
        android:textColor="#009688"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="0dp"
        android:text="Sound"
        android:textColor="#009688"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55sp"
        android:layout_marginEnd="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar3"
        android:layout_alignStart="@+id/seekBar3"
        android:layout_alignEnd="@+id/seekBar3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="0dp"
        android:text="Brightness"
        android:textColor="#009688"
        android:textSize="24sp" />

    <SeekBar
        android:id="@+id/seekBar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginStart="0dp"
        android:layout_marginTop="55sp"
        android:layout_marginEnd="0dp"
        android:progressTint="#CDDC39" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar4"
        android:layout_alignStart="@+id/seekBar4"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="35sp"
        android:layout_marginEnd="0dp"
        android:text="Difficulty Level"
        android:textColor="#009688"
        android:textSize="24sp" />

    <RadioGroup
        android:layout_width="390dp"
        android:layout_height="101dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/seekBar4"
        android:layout_alignEnd="@+id/seekBar4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70sp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Easy"
            android:textColor="#009688"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Medium"
            android:textColor="#009688"
            android:textColorHighlight="#009688"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hard"
            android:textColor="#009688"
            android:textSize="20sp" />
    </RadioGroup>

</RelativeLayout>